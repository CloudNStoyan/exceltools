<Window x:Class="ExcelTools.Alerts.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Alert" Height="250" Width="400" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Loaded="AlertWindow_OnLoaded" 
        AllowsTransparency="True" WindowStyle="None">
    <Border BorderBrush="Black" BorderThickness="1">
        <StackPanel Background="White">
            <StackPanel Height="200">
                <TextBlock Height="50" TextAlignment="Center" Text="{Binding AlertTitle}" FontSize="25" Padding="5"/>
                <TextBlock Height="150" TextAlignment="Justify" TextWrapping="Wrap" Text="{Binding AlertBody}" FontSize="18" Padding="5"/>
            </StackPanel>
            <StackPanel Height="50" Orientation="Horizontal">
                <Button Content="OK" Width="50" Height="25" Margin="5,0,0,0" Click="OkHandler"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
