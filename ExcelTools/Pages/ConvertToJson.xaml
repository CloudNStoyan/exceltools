<Page x:Class="ExcelTools.Pages.ConvertToJson"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelTools.Pages"
      xmlns:controls="clr-namespace:ExcelTools.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="ConvertToJson">
    <Grid Background="#F1F1F1">
        <StackPanel>
            <TextBlock Text="Convert to JSON" Background="#217346" Height="25" TextAlignment="Center" FontSize="17" Foreground="White"
                       ToolTip="The Find Tool lets you search through one or more excels to find specific value"/>
            <StackPanel Margin="10">
                <controls:FileSelection x:Name="FileSelection" Selection="Single"/>
                <Button Content="Convert" Width="120" Height="25" HorizontalAlignment="Left" Margin="5" Click="Convert"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
