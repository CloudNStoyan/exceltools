<Page x:Class="ExcelTools.Pages.CompareTool"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelTools.Pages"
      xmlns:controls="clr-namespace:ExcelTools.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="400"
      Title="CompareTool">
    <Grid Background="White">
        <StackPanel>
            <controls:MultipleFileSelectionOnly FileSelected="OnFileSelected" FileChanged="OnFileChanged" x:Name="FileSelection"/>
            <Button Content="Compare" Margin="5" Padding="5" IsEnabled="False" x:Name="CompareButton" Click="RunAnalysis"/>
        </StackPanel>
    </Grid>
</Page>