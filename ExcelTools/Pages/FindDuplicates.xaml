<Page x:Class="ExcelTools.Pages.FindDuplicates"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelTools.Pages"
      xmlns:controls="clr-namespace:ExcelTools.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="FindDuplicates">

    <Grid Background="White">
       <GroupBox Header="Find Duplicates">
            <StackPanel Margin="10">
                <controls:FileSelection x:Name="FileSelection"/>
                <Label>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Column name"/>
                        <TextBlock Text="*The letter representing the column*" FontSize="10" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="gray"/>
                    </StackPanel>
                </Label>
                <controls:Input Width="25" Height="25" HorizontalAlignment="Left" Margin="5,0,0,0" Text="A" x:Name="ColumnTextBox"/>
                <Button Content="Run" Margin="5" Click="RunAnalysis"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
