<Page x:Class="ExcelTools.Pages.ExportTool"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelTools.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="ExportTool">
    <Grid Background="White">
        <GroupBox Header="Export Tool">
        <StackPanel Margin="10">
            <Label>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="File"/>
                    <TextBlock Text="*The excel file you want to analyse*" FontSize="10" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="gray"/>
                </StackPanel>
            </Label>
            <Grid>
                <Button Content="Select File" Margin="5" Click="SelectFileHandler" Name="SelectFileButton" />
                <StackPanel Orientation="Horizontal" Name="FilePathViewWrapper" Visibility="Hidden">
                    <TextBox Width="300" Height="25" Margin="5,0,0,0"
                             HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                             Name="FilePathTextBox" IsReadOnly="True" />
                    <Button Content="Change" Margin="10,0,0,0" Height="25" Padding="3" Click="ChangeFileHandler"/>
                </StackPanel>
            </Grid>
            <Label>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Column name"/>
                    <TextBlock Text="*The letter representing the column*" FontSize="10" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="gray"/>
                </StackPanel>
            </Label>
            <TextBox Width="25" Height="25" 
                     HorizontalAlignment="Left" Margin="5,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                     Text="A" Name="ColumnTextBox"/>
            <Label>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Seperator"/>
                    <TextBlock Text="*The symbol that will be used to split the data rows*" FontSize="10" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="gray"/>
                </StackPanel>
            </Label>
            <TextBox HorizontalAlignment="Left" Margin="5,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                     Width="360" Height="25" Name="SeperatorInput"/>
            <Button Content="Run" Margin="5" Click="RunAnalysis"/>
            <TextBox HorizontalAlignment="Left" Margin="5,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                     Width="360" Height="200" Name="OutputTextbox"/>
        </StackPanel>
        </GroupBox>
    </Grid>
</Page>
