<Page x:Class="ExcelTools.Pages.ExcelToDataGrid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelTools.Pages"
      xmlns:controls="clr-namespace:ExcelTools.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="400"
      Title="ExcelToDataGrid">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Excel to DataGrid" Background="#217346" Height="25" TextAlignment="Center" FontSize="17" Foreground="White"
                       ToolTip="The Compare Tool lets you compare excels to see if they have any differences or similarities"/>
            <StackPanel Margin="10">
                <controls:FileSelection x:Name="FileSelection"/>
                <DataGrid Visibility="Hidden" x:Name="MainDataGrid"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
