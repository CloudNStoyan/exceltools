<Page x:Class="ExcelTools.Pages.MultiCounter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelTools.Pages"
      xmlns:controls="clr-namespace:ExcelTools.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="MultiCounter">
    <Grid Background="White">
        <GroupBox Header="Multi Counter">
            <StackPanel Margin="10">
                <controls:MultipleFileSelection x:Name="FileSelection"/>
                <Button Content="Run" Margin="5" Click="RunAnalysis"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
