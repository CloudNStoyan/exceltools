<Page x:Class="ExcelTools.Pages.MultiCounter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:ExcelTools.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="MultiCounter">
    <Grid Background="#F1F1F1">
        <StackPanel>
            <TextBlock Text="Multi Counter" Background="#217346" Height="25" TextAlignment="Center" FontSize="17" Foreground="White"
                       ToolTip="The Multi Counter feature lets you count how many cells are in a excel file/s"/>
            <StackPanel Margin="10">
                <controls:FileSelection Selection="Both" x:Name="FileSelection"/>
                <Button Content="Run" Margin="5" Click="RunAnalysis" ToolTip="Run the analysis"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
