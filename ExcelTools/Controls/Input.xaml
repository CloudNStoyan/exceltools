<UserControl x:Class="ExcelTools.Controls.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelTools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="120" Loaded="Input_OnLoaded">
    <TextBox Name="MainTextBox" TextChanged="MainTextBox_OnTextChanged" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding Text}" ToolTip="Column"/>
</UserControl>
