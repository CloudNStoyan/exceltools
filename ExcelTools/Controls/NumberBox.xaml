<UserControl x:Class="ExcelTools.Controls.NumberBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelTools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="100">
    <StackPanel Orientation="Horizontal" Width="100" Height="26">
        <TextBox Width="75" Text="1" x:Name="Input" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="Input_OnTextChanged"/>
        <StackPanel Width="25">
            <Button Height="13" Click="Increment" BorderThickness="0">
                <Path Fill="Black" Data="M 0 6 L 12 6 L 6 0 Z"/>
            </Button>
            <Button Height="13" Click="Decrement" BorderThickness="0">
                <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
