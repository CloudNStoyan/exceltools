<Window x:Class="ExcelTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Excel Tools" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <ListBox DockPanel.Dock="Left" Width="150" BorderThickness="0">
                <StackPanel>
                    <Button Content="Duplicate Finder" Padding="5" Margin="5"/>
                    <Button Content="Multi Counter" Padding="5" Margin="5"/>
                    <Button Content="Find Tool" Padding="5" Margin="5"/>
                </StackPanel>
            </ListBox>
            <Frame Name="Settings" Width="400"/>
            <GroupBox Header="Result Log" DockPanel.Dock="Right">
                <Grid>
                    <ScrollViewer>
                        <StackPanel Name="LogStackPanel"></StackPanel>
                    </ScrollViewer>
                    <Button Content="Clear" VerticalAlignment="Bottom" Click="ClearLogStackPanelHandler"/>
                </Grid>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
